<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#444444"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button"
            android:layout_width="99dp"
            android:layout_height="124dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="blue"
            android:background="#cc29"
            app:layout_constraintStart_toEndOf="@+id/button2"
            tools:layout_editor_absoluteY="237dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="99dp"
            android:layout_height="126dp"
            android:text="green"
            android:background="#abc2"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="238dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="396dp"
            android:layout_height="86dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="violet"
            android:background="#cc99"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="500dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="98dp"
            android:layout_height="127dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="indigo"
            android:background="#ff2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.288"
            app:layout_constraintStart_toEndOf="@+id/button"
            tools:layout_editor_absoluteY="238dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="148dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="red"
            android:background="#ee11"
            app:layout_constraintBaseline_toBaselineOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button6"
            android:layout_width="121dp"
            android:layout_height="146dp"
            android:text="orange"
            android:background="#bb11"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:text="yellow"
            android:background="#aabb11"
            tools:layout_editor_absoluteX="306dp"
            tools:layout_editor_absoluteY="0dp" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
</LinearLayout>